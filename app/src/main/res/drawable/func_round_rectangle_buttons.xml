<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false"
        android:state_focused="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:useLevel="false">
            <corners android:radius="7dp"/>
            <solid android:color="@color/funcButtonsCollorBgStart"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="3dp"
                android:bottom="3dp"/>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:centerColor="@color/funcButtonsCollorBgCenter"
                android:startColor="@color/funcButtonsCollorBgStart"
                android:endColor="@color/funcButtonsCollorBgEnd"
                android:gradientRadius="100"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#000000"/>
        </shape>
    </item>

    <item android:state_pressed="false"
        android:state_focused="true">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:useLevel="false">
            <corners android:radius="7dp"/>
            <solid android:color="@color/funcButtonsCollorBgStart"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="3dp"
                android:bottom="3dp"/>
        </shape>
    </item>

    <item android:state_pressed="true"
        android:state_focused="false">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle"
            android:useLevel="false">
            <corners android:radius="7dp"/>
            <gradient
                android:angle="90"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#C32929"
                android:centerColor="#E04958"
                android:endColor="#F15B5B"
                android:gradientRadius="100"
                android:type="linear"/>
            <stroke
                android:width="1dp"
                android:color="#000000"/>

            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="3dp"
                android:bottom="3dp"/>
        </shape>
    </item>

</selector>